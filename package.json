{
    "name": "rent-manager-saas",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "npm run dev --workspaces --if-present",
        "build:packages": "npm run build --workspace @proppio/types && npm run build --workspace @proppio/schemas",
        "build:apps": "npm run build --workspaces --if-present",
        "build": "npm run build:packages && npm run build:apps",
        "test": "npm run test --workspaces --if-present",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,ts,tsx,jsx,json,md}": "prettier --write",
        "apps/web/**/*.{ts,tsx}": "eslint --config apps/web/eslint.config.js --fix",
        "apps/api/**/*.{ts}": "eslint --config apps/api/eslint.config.js --fix"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^5.1.1",
        "eslint": "^9.39.2",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "turbo": "^2.7.4",
        "vite": "^5.3.1"
    }
}
